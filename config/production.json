{
  "system": {
    "theme": "eve"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./themes/eve/components/*",
        "./node_modules/@evershop/evershop/src/components/*"
      ],
      "@components-origin/*": [
        "./node_modules/@evershop/evershop/src/components/*"
      ],
      "@default-theme/*": [
        "./node_modules/@evershop/evershop/src/modules/*/pages/*"
      ]
    }
  },
  "shop": {
    "currency": "INR",
    "language": "en",
    "weightUnit": "kg"
  },
   "database": {
    "client": "pg",
    "connection": {
      "host": "${DB_HOST}",
      "port": "${DB_PORT}",
      "user": "${DB_USER}",
      "password": "${DB_PASSWORD}",
      "database": "${DB_NAME}",
      "ssl": "${DB_SSL}"
    }
  },
    "options": {
      "pool": {
        "min": 2,
        "max": 10
      }
    }
}
