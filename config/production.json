{
  "system": {
    "theme": "eve"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "./themes/eve/components/*",
        "./node_modules/@evershop/evershop/src/components/*"
      ],
      "@components-origin/*": [
        "./node_modules/@evershop/evershop/src/components/*"
      ],
      "@default-theme/*": [
        "./node_modules/@evershop/evershop/src/modules/*/pages/*"
      ]
    }
  },
  "shop": {
    "currency": "INR",
    "language": "en",
    "weightUnit": "kg"
  },
   "database": {
    "client": "pg",
    "connection": {
      "host": "database",
      "port": 5432,
      "user": "admin",
      "password": "admin@1234",
      "database": "evershop"
    },
    "options": {
      "pool": {
        "min": 2,
        "max": 10
      }
    }
  }
}
